<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.java.vjezbe.DodajPrivatneKorisnikeController">
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Unos privatnog korisnika" textAlignment="CENTER" />
            <HBox alignment="TOP_CENTER">
               <children>
                  <Label alignment="CENTER_RIGHT" prefWidth="150.0" text="Ime:" textAlignment="RIGHT">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="imeKorisnikaTextField" alignment="CENTER_RIGHT" />
               </children>
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="TOP_CENTER">
               <children>
                  <Label alignment="CENTER_RIGHT" prefWidth="150.0" text="Prezime:" textAlignment="RIGHT">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="prezimeKorisnikaTextField" alignment="CENTER_RIGHT" />
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER">
               <children>
                  <Label alignment="CENTER_RIGHT" prefWidth="150.0" text="Email:" textAlignment="RIGHT">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="emailKorisnikaTextField" alignment="CENTER_RIGHT" />
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER">
               <children>
                  <Label alignment="CENTER_RIGHT" prefWidth="150.0" text="Telefon:" textAlignment="RIGHT">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="telefonKorisnikaTextField" alignment="CENTER_RIGHT" />
               </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#dodaj" text="Unos" />
         </children>
      </VBox>
   </center>
</BorderPane>
