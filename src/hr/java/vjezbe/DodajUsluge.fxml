<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.java.vjezbe.DodajUslugeController">
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Unos automobila" textAlignment="CENTER" />
            <HBox alignment="TOP_CENTER">
               <children>
                  <Label alignment="CENTER_RIGHT" prefWidth="150.0" text="Naslov:" textAlignment="RIGHT">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="naslovUslugeTextField" alignment="CENTER_RIGHT" />
               </children>
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="TOP_CENTER">
               <children>
                  <Label alignment="CENTER_RIGHT" prefWidth="150.0" text="Opis:" textAlignment="RIGHT">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="opisUslugeTextField" alignment="CENTER_RIGHT" />
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER" />
            <HBox alignment="TOP_CENTER">
               <children>
                  <Label alignment="CENTER_RIGHT" prefWidth="150.0" text="Stanje:" textAlignment="RIGHT">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <ComboBox fx:id="stanjeUslugaTextField" prefWidth="150.0" />
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER">
               <children>
                  <Label alignment="CENTER_RIGHT" prefWidth="150.0" text="Cijena:" textAlignment="RIGHT">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="cijenaUslugeTextField" alignment="CENTER_RIGHT" />
               </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#dodaj" text="Unos" />
         </children>
      </VBox>
   </center>
</BorderPane>
